<form class="form-horizontal">
  <div class="form-group">
    <%= form_for @task do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.check_box :done %>
      <%= f.label :due_date %>
      <%= f.date_field :due_date %>
      <%= f.submit %>
    <% end %>
    </div>
</form>
